# =============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION - CREDIT DECISION LLM RAG PLATFORM
# =============================================================================

# Application Environment
NODE_ENV=development
LOG_LEVEL=debug

# Database Configuration
POSTGRES_DB=credit_decision_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/credit_decision_db

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ChromaDB Configuration
CHROMADB_URL=http://localhost:8000
CHROMADB_HOST=localhost
CHROMADB_PORT=8000

# API Configuration
API_PORT=3001
JWT_SECRET=development-jwt-secret-key-not-for-production
ENCRYPTION_KEY=development-encryption-key-32-chars
CORS_ORIGIN=http://localhost:3000

# Web Configuration
WEB_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=development-nextauth-secret-not-for-production
NEXT_TELEMETRY_DISABLED=1

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_API_KEY_HERE

# Rate Limiting (more lenient for development)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Security (less strict for development)
BCRYPT_ROUNDS=4
SESSION_TIMEOUT=86400000
MAX_LOGIN_ATTEMPTS=10
LOCKOUT_TIME=300000

# Development Features
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_LOGGING=true
ENABLE_MOCK_DATA=true
ENABLE_API_DOCS=true

# Feature Flags
ENABLE_AI_DECISIONS=true
ENABLE_AUTO_DECISIONS=false
ENABLE_CONVERSATION_MEMORY=true
ENABLE_CACHING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_METRICS=true

# Performance (relaxed for development)
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=60000
DATABASE_POOL_SIZE=5
REDIS_POOL_SIZE=5

# Development Tools
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_SWAGGER_UI=true
ENABLE_PROFILING=true
