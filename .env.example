# =============================================================================
# CREDIT DECISION LLM RAG PLATFORM - ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000
API_PORT=3001
LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Primary Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/credit_decision_db
DATABASE_POOL_SIZE=10

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.1

# AWS Bedrock Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================
# Choose one: faiss, pinecone, chromadb
VECTOR_DB_TYPE=faiss

# FAISS Configuration (local)
FAISS_INDEX_PATH=./data/faiss_index

# Pinecone Configuration (cloud)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east1-gcp
PINECONE_INDEX_NAME=credit-decisions

# ChromaDB Configuration
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_COLLECTION_NAME=credit_documents

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSION=1536
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# =============================================================================
# AWS SERVICES CONFIGURATION
# =============================================================================
# S3 Configuration
AWS_S3_BUCKET=credit-decision-documents
AWS_S3_REGION=us-east-1

# Lambda Configuration
AWS_LAMBDA_FUNCTION_NAME=credit-decision-processor

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Dynatrace Configuration
DYNATRACE_URL=https://your-tenant.live.dynatrace.com
DYNATRACE_API_TOKEN=your-dynatrace-api-token

# Grafana Configuration
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your-grafana-api-key

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email Service (SendGrid/SES)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourcompany.com

# Webhook URLs
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
TEAMS_WEBHOOK_URL=https://your-tenant.webhook.office.com/webhookb2/your-webhook

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Test Database
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/credit_decision_test_db

# Mock Services
MOCK_LLM_RESPONSES=false
MOCK_VECTOR_DB=false

# Debug Settings
DEBUG_RAG_PIPELINE=false
DEBUG_PROMPT_ENGINEERING=false
VERBOSE_LOGGING=false

# =============================================================================
# KUBERNETES & DEPLOYMENT
# =============================================================================
KUBERNETES_NAMESPACE=credit-decision
HELM_RELEASE_NAME=credit-decision-llm-rag

# Docker Registry
DOCKER_REGISTRY=your-registry.azurecr.io
DOCKER_IMAGE_TAG=latest

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_ADVANCED_RAG=true
ENABLE_MULTI_MODEL_INFERENCE=false
ENABLE_REAL_TIME_MONITORING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_A_B_TESTING=false
