# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION - CREDIT DECISION LLM RAG PLATFORM
# =============================================================================

# Application Environment
NODE_ENV=production
LOG_LEVEL=info

# Database Configuration
POSTGRES_DB=credit_decision_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password-here
DATABASE_URL=postgresql://postgres:your-secure-postgres-password-here@postgres:5432/credit_decision_db

# Redis Configuration
REDIS_URL=redis://:your-secure-redis-password-here@redis:6379
REDIS_PASSWORD=your-secure-redis-password-here

# ChromaDB Configuration
CHROMADB_URL=http://chromadb:8000
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000

# API Configuration
API_PORT=3001
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production-min-32-chars
ENCRYPTION_KEY=your-32-character-encryption-key-here
CORS_ORIGIN=https://yourdomain.com

# Web Configuration
WEB_PORT=3000
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production-min-32-chars
NEXT_TELEMETRY_DISABLED=1

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_API_KEY_HERE

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600000
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# Monitoring
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password-here
GRAFANA_SECRET_KEY=your-grafana-secret-key-change-in-production
PROMETHEUS_RETENTION_TIME=30d

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Email Configuration (for notifications)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@yourdomain.com

# External Services
CREDIT_BUREAU_API_URL=https://api.creditbureau.com
CREDIT_BUREAU_API_KEY=your-credit-bureau-api-key
IDENTITY_VERIFICATION_API_URL=https://api.identityverification.com
IDENTITY_VERIFICATION_API_KEY=your-identity-verification-api-key

# Feature Flags
ENABLE_AI_DECISIONS=true
ENABLE_AUTO_DECISIONS=true
ENABLE_CONVERSATION_MEMORY=true
ENABLE_CACHING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_METRICS=true

# Performance Tuning
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
DATABASE_POOL_SIZE=20
REDIS_POOL_SIZE=10

# Docker Registry (for Kubernetes deployment)
DOCKER_REGISTRY=your-registry.com
IMAGE_TAG=latest
